@using System.Web;
@using System.Web.Mvc;
@using PagedList.Mvc;
@model PagedList.PagedList<QLKaraoke.Models.DichVu1>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shop_section layout_padding">
    <style>
        .box-container {
            display: block;
        }

        .box {
            width: 100%;
            margin-bottom: 20px;
            height: 300px;
            border: 1px solid #ccc;
            padding: 10px;
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .sidebar {
            background-color: none;
            padding: 20px;
            margin-bottom: 20px;
        }

        .sidebar__item h4 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .sidebar__item ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .sidebar__item ul li {
                margin-bottom: 5px;
            }

                .sidebar__item ul li a {
                    color: #333;
                    text-decoration: none;
                }

                    .sidebar__item ul li a:hover {
                        color: #666;
                    }

        .product__pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .MenuTrang {
            display: inline;
            text-align: center;
            margin-left: 10px;
        }

        .product__pagination {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
            font-size: 16px;
            color: #555;
            font-weight: bold;
        }

        .MenuTrang {
            display: inline;
            text-align: center;
            margin-left: 10px;
        }

            .MenuTrang a {
                display: inline-block;
                padding: 8px 12px;
                margin-right: 5px;
                border-radius: 4px;
                background-color: #fff;
                border: 1px solid #ccc;
                color: #555;
                transition: all 0.3s ease;
            }

                .MenuTrang a:hover {
                    background-color: #555;
                    color: #fff;
                    border-color: #555;
                }

        .add-to-cart-btn {
            background-color: #4CAF50; /* Màu nền của button */
            color: white; /* Màu chữ của button */
            padding: 8px 16px; /* Khoảng cách giữa nội dung và viền của button */
            border: none; /* Không có viền cho button */
            border-radius: 4px; /* Bo tròn các góc của button */
            cursor: pointer; /* Hiển thị con trỏ khi di chuột qua button */
            transition-duration: 0.4s; /* Thời gian hiệu ứng chuyển động */
        }

            .add-to-cart-btn:hover {
                background-color: #3e8e41; /* Màu nền của button khi di chuột qua */
            }

        .product-box {
            position: relative;
        }

        .add-to-cart-btn {
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
            margin-left: 90px;
            margin-bottom: 30px;
        }

        .box {
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }

            .box:hover {
                box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
            }
    </style>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Loại Dịch Vụ</h4>
                        <ul>

                            @Html.Action("Categories", "Home")

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row mb-4">
                    <div class="col-12 col-md-6 offset-md-3">
                        <form action="@Url.Action("Services", "Home")" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Tìm kiếm ">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-outline-secondary">Tìm kiếm</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="heading_container heading_center">
                    <h2>Dịch Vụ</h2>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.SoLuong > 0)
                        {
                            <div class="col-sm-4 col-xl-4">
                                <a href="@Url.Action("ProductDetail", "Home", new { id = item.IDDichVu })">
                                    <div class="box">

                                        <div class="img-box">
                                            <img style="width: 100%; height: 100%; object-fit: cover;" src="~/Areas/Admin/assets/img/@item.HinhAnh" alt="">
                                        </div>
                                        <div class="detail-box">
                                            <h6>@item.Ten</h6>

                                            <h6>  @item.SoLuong:@item.DVT</h6>
                                            <h6>
                                                Gía:
                                                <span>
                                                    <span>@string.Format("{0:0,0} đ", item.TongGia)</span>
                                                </span>
                                            </h6>
                                        </div>

                                    </div>
                                </a>
                                <a class="add-to-cart-btn" href="@Url.Action("AddCart","UseService",new {ms = item.IDDichVu, url = Request.Url.ToString()})">Thêm</a>

                            </div>
                        }
                        else
                        {
                            <div class="col-sm-4 col-xl-4">

                                <div class="box">

                                    <div class="img-box">
                                        <img style="width: 100%; height: 100%; object-fit: cover;" src="~/Areas/Admin/assets/img/@item.HinhAnh" alt="">
                                    </div>
                                    <div class="detail-box">
                                        <h6>@item.Ten</h6>
                                        <h6>@item.DVT</h6>
                                        <h6>
                                            Gía:
                                            <span>
                                                <span>@string.Format("{0:0,0} đ", item.TongGia)</span>
                                            </span>
                                        </h6>
                                    </div>

                                </div>
                                <button class="add-to-cart-btn" onclick="addToCart">Thêm</button>
                            </div>
                        }

                    }
                </div>

                <div class="product__pagination">
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, page => Url.Action("Services", new { page = page }))
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
