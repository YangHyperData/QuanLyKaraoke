
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="product-detail">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="product-image">
                <img style="margin-left:150px" src="~/Areas/Admin/assets/img/@Model.HinhAnh" alt="@Model.Ten" class="product-image">
            </div>
        </div>
        <div class="col-md-6 col-sm-10">
            <div class="product-info">
                <h1 class="product-name">@Model.Ten</h1>
                @if (Model.MoTa != null)
                {
                    <div class="product-quantity-info">
                        <span class="product-sold-label">Mô Tả:</span>
                        <span class="product-description">@Html.Raw(Model.MoTa)</span>
                    </div>
                }

                <div class="product-price-info">
                    <span class="product-price-label">Giá:</span>
                    <span class="product-price-value">@string.Format("{0:0,0} đ", @Model.TongGia)</span>
                </div>
                <div class="product-quantity-info">
                    <span class="product-sold-label">Số lượng:</span>
                    <span class="product-sold-value">@Model.SoLuong</span>
                </div>
                <div class="product-quantity-info">
                    <span class="product-sold-label">Đơn Vị:</span>
                    <span class="product-sold-value">@Model.DVT</span>
                </div>
                <div class="product-sold-info">
                    <span class="product-sold-label">Đã bán:</span>
                    <span class="product-sold-value">@Model.DaBan</span>
                </div>
                <div class="product-add-to-cart">
                    <form action="@Url.Action("AddCartAll", "UseService", new {ms=Model.IDDichVu,url=Request.Url.ToString()})" method="post">

                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <span class="qty-minus" onclick="decreaseQty()">-</span>
                                    <input type="text" name="SoLuong" value="1" min="1" size="3" />
                                    <span class="qty-plus" onclick="increaseQty()">+</span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="primary-btn" value="Đặt Dịch Vụ">
                    </form>
                    <script>
                        function increaseQty() {
                            var qty = parseInt(document.getElementsByName("SoLuong")[0].value);
                            document.getElementsByName("SoLuong")[0].value = qty + 1;
                        }
                        function decreaseQty() {
                            var qty = parseInt(document.getElementsByName("SoLuong")[0].value);
                            if (qty > 1) {
                                document.getElementsByName("SoLuong")[0].value = qty - 1;
                            }
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
