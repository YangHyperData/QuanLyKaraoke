
@{
    ViewBag.Title = "LatestServices";
    Layout = null;
}

@model IEnumerable<QLKaraoke.Models.DichVu1>

<style>

    .box-container {
        display: block;
    }

    .box {
        width: 100%;
        margin-bottom: 20px;
    }
</style>
<div class="container">
    <div class="heading_container heading_center">
        <h2>
            Dịch Vụ
        </h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-xl-3">
                <div class="box" style="flex: 0 0 22%; height: 300px; border: 1px solid #ccc; padding: 10px; margin-right: 10px; margin-bottom: 10px;">
                    <a href="@Url.Action("ProductDetail", "Home",new { id = item.IDDichVu })">
                        <div class="img-box">
                            <img style="width: 100%; height: 100%; object-fit: cover;" src="~/Areas/Admin/assets/img/@item.HinhAnh" alt="">
                        </div>
                        <div class="detail-box">
                   
                                <h6>@item.Ten</h6>
                         
                            <h6>
                                Gía:
                                <span>
                                    <span>@string.Format("{0:0,0} đ", item.TongGia)</span>
                                </span>
                            </h6>
                        </div>
                        <div class="new">
                            <span>
                                New
                            </span>
                        </div>
                    </a>
                </div>
            </div>
        }
        </div>
    <div class="btn-box">
        <a href="/home/Services">
            Xem Thêm
        </a>
    </div>
</div>