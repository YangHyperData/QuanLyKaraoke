
@{
    ViewBag.Title = "Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model QLKaraoke.Models.DatPhong
<style>
    body {
        background-color: #f2f2f2;
        font-family: Arial, Helvetica, sans-serif;
        color: #333;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
        color: #333;
    }

    h4 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 30px;
    }

    li {
        font-size: 20px;
        margin-bottom: 15px;
    }

    p {
        font-size: 18px;
        text-align: justify;
        margin-top: 30px;
    }

    .print-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 10px 20px;
        font-size: 16px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .printable {
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
    }
    }
</style>
<div class="container">
    <div class="card">
        <h2>Cảm ơn bạn @Model.KhachHangg.Name đã đặt dịch vụ</h2>
        <p>Vui lòng chờ đợi trong chốc lát nhân viên sẽ đưa dịch vụ đến phòng @Model.TenPhong.</p>
        <button class="print-button" onclick="window.print()">In </button>

    </div>
</div>
