<style>
    .cart-icon {
        position: relative;
        display: inline-block;
        font-size: 24px;
        margin-left: 20px;
    }

        .cart-icon span {
            position: absolute;
            top: -15px;
            right: -10px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 5px;
            font-size: 12px;
        }
</style>
<a href="@Url.Action("Cart","UseService")" class="cart-icon">
    <i class="fa fa-cart-plus" aria-hidden="true"></i>
    <span>@ViewBag.SumCart</span>
</a>