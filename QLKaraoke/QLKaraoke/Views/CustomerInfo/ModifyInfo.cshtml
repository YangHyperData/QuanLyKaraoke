@model QLKaraoke.Models.KhachHangg
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa Thông Tin</title>
    <style>
        .form-horizontal {
            margin: auto;
            max-width: 800px;
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
        }

        .TitleAdmin {
            color: #333;
            font-size: 18px;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: none;
            font-size: 16px;
            height: 40px;
            padding: 8px;
        }

            .form-control:focus {
                border-color: #38b9f0;
                box-shadow: none;
                outline: 0;
            }

        .text-danger {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        .btn {
            border-radius: 4px;
            font-size: 16px;
            font-weight: bold;
            padding: 12px 20px;
        }

        .btn-success {
            background-color: #38b9f0;
            border-color: #38b9f0;
            color: #fff;
        }

            .btn-success:hover {
                background-color: #1e87d4;
                border-color: #1e87d4;
                color: #fff;
            }

        .btn-dark {
            background-color: #444;
            border-color: #444;
            color: #fff;
        }

            .btn-dark:hover {
                background-color: #333;
                border-color: #333;
                color: #fff;
            }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("ModifyInfo", "CustomerInfo", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="form-group">
                    @Html.LabelFor(model => model.Avata,"Hình Ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @if (Model.Avata != null)
                        {
                            <img src="~/Asset/Img/@Url.Content(Model.Avata)" alt="Current Avata" width="150" height="150" />
                        }
                        <input type="file" name="Avata" id="Avata" class="form-control bi bi-upload" style="font-size: 14px; padding: 4px 0;" onchange="updateFileName()" />

                        @Html.ValidationMessageFor(model => model.Avata, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name,"Tên", htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password,"Mật Khẩu", htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone,"Số Điện Thoại", htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address,"Địa Chi", htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    @{string ID = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).ID.ToString();}
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @*@Html.ActionLink("Change Password", "ChangePassword", new {id=ID}, new { @class = "btn btn-dark" })*@
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-dark" })
                </div>
            </div>
        }
    </div>
</body>
</html>
