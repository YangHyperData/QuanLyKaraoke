
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["CInfo"] != null)
{
    string ID = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).ID.ToString();
    string Name = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Name.ToString();
    string Email = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Email.ToString();
    string Phone = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Phone != null ? ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Phone.ToString() : "";
    string Address = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Address.ToString();
    string hinh = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Avata.ToString() != null ? ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Avata.ToString() : "";
    string Gt = ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Gender.ToString() != null ? ((QLKaraoke.Models.KhachHangg)Session["CInfo"]).Gender.ToString() : "";
    <text>
        <section style="background-color: #eee;">
            <div class="container py-5">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img src="~/Asset/Img/@hinh" alt="avatar"
                                         class="rounded-circle img-fluid" style="width: 150px;">
                                    <h5 class="my-3">Setting:</h5>
                                    <div class="form-group">
                                        @Html.ActionLink("Modify", "ModifyInfo", null, new { @class = "btn btn-dark w-100" })
                                    </div>
                                    <div class="form-group">
                                        @Html.ActionLink("Change Password", "Change", "CustomerInfo", null, new { @class = "btn btn-dark w-100" })

                                    </div>
                                    <div class="form-group">
                                        <a href="~/Security/Login"><input type="button" value="Logout" class="btn btn-dark w-100" /></a>
                                    </div>
                                    <div class="d-flex justify-content-center mb-2">
                                    </div>
                                </div>
                        </div>
                        
                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0 font-weight-bold">Họ Và Tên</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Name</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0 font-weight-bold">Email</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Email</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0 font-weight-bold">SĐT</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Phone</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0 font-weight-bold">Địa Chỉ</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Address</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0 font-weight-bold">Giới Tính</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Gt</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card mb-4 mb-md-0">
                                    <div class="card-body">
                                        <p class="mb-4 font-weight-bold">
                                            Đặt Phòng
                                        </p>
                                        <div class="order-panel">
                                            @Html.Partial("_BookTickket")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card mb-4 mb-md-0">
                                    <div class="card-body">
                                        <p class="mb-4 font-weight-bold">
                                            Hóa Đơn
                                        </p>
                                        <div class="order-panel">
                                            @Html.Partial("_Bill")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card mb-4 mb-md-0">
                                    <div class="card-body">
                                        <p class="mb-4 font-weight-bold">
                                            Dịch Vụ
                                        </p>
                                        <div class="order-panel">
                                            @Html.Partial("_SerVice")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card mb-4 mb-md-0">
                                    <div class="card-body">
                                        <p class="mb-4 font-weight-bold">
                                            Mã Giảm Gía
                                        </p>
                                        <div class="order-panel">
                                            @Html.Partial("_Discount")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                                                @Html.Partial("_Staff")
                               
                        


                    </div>
                </div>
        </section>
    </text>
}
else
{
    Response.Redirect("~/Security/Login");
}



