
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model QLKaraoke.Models.ThongTin

<style>
    /* Căn giữa tiêu đề */
    h2 {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Khu vực hiển thị chi tiết */
    .details-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    /* Ảnh */
    .image-container img {
        max-width: 100%;
        height: auto;
        margin: auto;
    }

    /* Nội dung chi tiết */
    .text-container {
        max-width: 90%;
        padding: 20px;
        box-sizing: border-box;
        background-color: #f7f7f7;
       
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

        /* Tiêu đề Nội dung */
        .text-container strong {
           
            margin-bottom: 10px;
            font-weight: bold;
        }

        /* Mô tả ngắn */
        .text-container p {
            max-width: 500ch;
          
            margin-bottom: 10px;
        }

            /* Ngày */
            .text-container p:last-child {
                margin-bottom: 0;
            }
</style>

<div class="container">
    <h2>@Html.Raw(@Model.TieuDe)</h2>
    <div class="details-container">
        <div class="image-container">
            <img src="@Url.Content("~/Areas/Admin/assets/img/" + Model.Hinhanh)" alt="" />
        </div>
        <div class="text-container">
            <strong>Nội Dung:</strong>
            <p>@Html.Raw(@Model.ThongTinn)</p>
            <p style="float:right"><strong>Ngày:</strong> @Model.Ngay.Value.ToString("dd/MM/yyyy")</p>
        </div>
    </div>
</div>
