@model QLKaraoke.Models.ChucVu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h2 class="my-4">Chỉnh sửa chức vụ - @Model.TenChucVu</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDChucVu)

        <div class="form-group row">
            @Html.LabelFor(model => model.LuongCV,"Lương", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.LuongCV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LuongCV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Lưu</button>
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
