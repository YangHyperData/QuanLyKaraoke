@model QLKaraoke.Models.Phong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4> Thêm Phòng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Tên Phòng</label>
                @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Đơn Gía</label>
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Số Lượng Người</label>
                @Html.EditorFor(model => model.SoLuongNguoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuongNguoi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Loại Phòng:</label>
                @Html.DropDownList("IDLoaiPhong", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDLoaiPhong, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control", @id = "NoiDung" } })
        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
    </div>
    <script>
        CKEDITOR.replace('NoiDung');
    </script>
    <div class="form-group">
        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="HinhAnh" id="HinhAnh" />
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="form-group row">
            <div class="col-md-8 offset-md-3">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                <a href="@Url.Action("Index")" class="btn btn-danger">Hủy</a>
            </div>
        </div>
    </div>

</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
