@model QLKaraoke.Models.LienHe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card">
    <div class="card-header">
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">LienHe</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Tên Khách Hàng:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TenKH)
            </dd>

            <dt class="col-sm-3">
                Nội Dung
            </dt>

            <dd class="col-sm-9">
                <p>@Html.Raw(@Model.NoiDung)</p>
            </dd>

            <dt class="col-sm-3">
                Số Điện Thoại
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SDT)
            </dd>

            <dt class="col-sm-3">
                Email
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3">
                Trạng Thái
            </dt>

            <dd class="col-sm-9">
                @{
                    var trangThai = "";
                    if (Model.TrangThai == 1)
                    {
                        trangThai = "Liên hệ";
                    }
                    else
                    {
                        trangThai = "Chưa liên hệ";
                    }
                }
                @trangThai
            </dd>

            <dt class="col-sm-3">
                Ngày Liên Hệ
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NgayLH)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-sm-2 ">
                    <input type="submit" value="Xóa" class="btn btn-danger btn-block" />
                </div>
                <div class="col-sm-2">
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary btn-block" })
                </div>
            </div>

        }
    </div>
</div>
