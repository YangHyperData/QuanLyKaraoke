@model List<QLKaraoke.Models.LoaiPhong>

@{
    ViewBag.Title = "Danh sách loại phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/home/index">Home</a></li>
            <li class="breadcrumb-item">TypeRoom</li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>
</div>
<div class="panel">
    <div class="panel-body">
        <a href="@Url.Action("Create")" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> </a>
       
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên</th>
                        <th class="text-center">Giá (VNĐ)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Select((value, index) => new { index = index + 1, value }))
                    {
                        <tr id="row_@item.value.IDLoaiPhong">
                            <td class="text-center">@item.index</td>
                            <td class="text-center">@item.value.TenPhong </td>
                            <td class="text-center">@string.Format("{0:0,0} đ", item.value.DonGia)</td>
                           
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.value.IDLoaiPhong })" class="btn btn-sm btn-info"><i class="fa fa-pencil-alt"></i> </a>
                                <a href="@Url.Action("Delete", new { id = item.value.IDLoaiPhong })" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>