@model IEnumerable<QLKaraoke.Models.LoaiDV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/home/index">Home</a></li>
            <li class="breadcrumb-item">TypeService</li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>
</div>
<table class="table">
    <a href="@Url.Action("Create")" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>  </a>
    <thead>

        <tr>
            <th>STT</th>
            <th>Tên dịch vụ</th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{int stt = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(stt++)</td>
                <td>@Html.DisplayFor(modelItem => item.TenDV)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil-alt"></i>
                     
                    </a>
                    
                    <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i>
                        
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>