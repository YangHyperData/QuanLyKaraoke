@model IEnumerable<QLKaraoke.Models.GiammGia>

@{
    ViewBag.Title = "Danh sách mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/home/index">Home</a></li>
            <li class="breadcrumb-item">Discount</li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>
</div>
<div class="mt-3 mb-3">
 
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa fa-plus"></i></a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên khách hàng</th>
            <th>Số tiền</th>
            <th>Mã giảm giá</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th>Actions</th>
        </tr>
    </thead>
    @{int stt = 1;}
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@(stt++)</td>
                <td>@Html.DisplayFor(modelItem => item.KhachHangg.Name)</td>
                <td>@string.Format("{0:0,0} đ", item.SoTien)</td>
                <td>@Html.DisplayFor(modelItem => item.code)</td>
                <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
                <td>
                    @if (item.TrangThai == true)
                    {
                        <span style="color: green;">Công khai</span>
                    }
                    else
                    {
                        <span style="color: red;">Chỉ định</span>
                    }
                </td>

                <td>

                    <a href="@Url.Action("Delete", new { id = item.IdGG })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>