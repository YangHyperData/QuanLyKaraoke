@model QLKaraoke.Models.ThongTin

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("Create", "Information", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-horizontal">
    <h4>Thông Tin</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.TieuDe, "Tiêu Đề", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", @id = "TieuDe" } })
            @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
        </div>
    </div>
    <script>
        CKEDITOR.replace('TieuDe');
    </script>
    <div class="form-group">
        @Html.LabelFor(model => model.ThongTinn, "Nội Dung", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ThongTinn, new { htmlAttributes = new { @class = "form-control", @id = "ThongTinn" } })
            @Html.ValidationMessageFor(model => model.ThongTinn, "", new { @class = "text-danger" })
        </div>
    </div>
    <script>
        CKEDITOR.replace('ThongTinn');
    </script>


    <div class="form-group">
        @Html.LabelFor(model => model.Hinhanh, "Hình Ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="Hinhanh" id="Hinhanh" />
            @Html.ValidationMessageFor(model => model.Hinhanh, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">

        <div class="form-group row">
            <div class="col-md-8 offset-md-3">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                <a href="@Url.Action("Index")" class="btn btn-danger">Hủy</a>
            </div>
        </div>
    </div>
</div>
}

