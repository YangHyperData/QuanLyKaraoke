@model QLKaraoke.Models.ThongTin

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Edit", "Information", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thông Tin</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.TieuDe, "Tiêu Đề", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", @id = "TieuDe" } })
            @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
        </div>
    </div>
    <script>
        CKEDITOR.replace('TieuDe');
    </script>
    <div class="form-group">
        @Html.LabelFor(model => model.ThongTinn, "Nội Dung", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ThongTinn, new { htmlAttributes = new { @class = "form-control", @id = "ThongTinn" } })
            @Html.ValidationMessageFor(model => model.ThongTinn, "", new { @class = "text-danger" })
        </div>
    </div>
    <script>
        CKEDITOR.replace('ThongTinn');
    </script>

    <div class="form-group">
        Hình Ảnh
        <div class="col-md-10">
            @if (Model.Hinhanh != null)
            {
                <img src="@Url.Content("~/Areas/Admin/assets/img/" + Model.Hinhanh)" alt="@Model.Hinhanh" class="img-thumbnail" />
            }
            <input type="file" name="Hinhanh" id="Hinhanh" class="form-control bi bi-upload" onchange="updateFileName()" />

            @Html.ValidationMessageFor(model => model.Hinhanh, "", new { @class = "text-danger" })
        </div>
    </div>






    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
