@model QLKaraoke.Models.SuDungDichVu

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.IdDP, "DatPhong", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("IdDP", ViewBag.IdDP as SelectList, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IdDP, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IDDv, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("IDDv", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IDDv, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Đặt" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    </div>
}

<style>
    .control-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 0;
        border-color: #ddd;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        color: red;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-default {
        background-color: #f2f2f2;
        border-color: #f2f2f2;
        color: #333;
    }

        .btn-default:hover {
            background-color: #e6e6e6;
            border-color: #adadad;
        }
</style>
